#!/usr/bin/env bash

CPUS=$1
DATAFILE=$2
ALGORITHM=$3
DATASET=$4
SUPPORT=$5
SAMPLES=$6

TRIALS=$(dc -e "$CPUS 1 - p")
TRIAL_GROUPS=$(dc -e "50 $CPUS / p")
TS=()

for trial in $(seq 0 $TRIALS)
do
	TS[$trial]=$(mktemp --tmpdir trial-$trial-XXXXXX)
done

function cleanfiles {
	line=(rm "${TS[@]}")
	>&2 echo $ "${line[@]}"
	"${line[@]}"
}

function cleanup {
	cleanfiles
	line=(kill -- -$BASHPID)
	>&2 echo $ "${line[@]}"
	"${line[@]}"
}
trap cleanup 0

for group in $(seq 1 $TRIAL_GROUPS)
do
	cleanfiles
	>&2 echo
	trial=1
	for file in ${TS[*]}
	do
		>&2 echo
		>&2 echo staring group: $group trial: $trial into: $file
		line=(uniformity-trial "$file" "$ALGORITHM" "$DATASET" "$SUPPORT" "$SAMPLES")
		>&2 echo $ "${line[@]}" \&
		"${line[@]}" &
		let trial=trial+1
	done
	wait
	>&2 echo
	for file in ${TS[*]}
	do
		line=(cat $file)
		>&2 echo $ "${line[@]}" \>\> $DATAFILE
		"${line[@]}" >> $DATAFILE
	done
	>&2 echo
done
trap cleanfiles 0

